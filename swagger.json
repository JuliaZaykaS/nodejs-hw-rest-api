{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0",
    "title": "Phonebook API",
    "description": "Application for save, filter and edit contacts with authorization",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "servers": [
    {
      "url": "https://backend-for-phonebook.herokuapp.com/"
    }
  ],
  "tags": [
    {
      "name": "Users",
      "description": "Users endpoints"
    },
    {
      "name": "Contacts",
      "description": "Contacts endpoints"
    }
  ],
  "paths": {
    "/users/signup": {
      "post": {
        "tags": ["Users"],
        "summary": "User registration",
        "parameters": [],
        "requestBody": {
          "description": "Registration's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistrationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "409": {
            "description": "Provided email already exists",
            "content": {}
          }
        }
      }
    },

    "/users/login": {
      "post": {
        "tags": ["Users"],
        "summary": "User authentication",
        "parameters": [],
        "requestBody": {
          "description": "Authentication's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Email doesn't exist / Password is wrong",
            "content": {}
          },
          "404": {
            "description": "Your email is not verificated. Please, watch through your mail.",
            "content": {}
          }
        }
      }
    },

    "/users/logout": {
      "post": {
        "tags": ["Users"],
        "summary": "Logout",
        "security": [{ "Bearer": [] }],
        "parameters": [],
        "responses": {
          "204": {
            "description": "Successful operation, No Content",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (invalid access token)",
            "content": {}
          }
        }
      }
    },

    "/users/": {
      "patch": {
        "tags": ["Users"],
        "summary": "User data",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "subscription",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SubscriptionRequest"
              }
            }
          }
        },

        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SubscriptionRequest"
                }
              }
            }
          },
          "400": {
            "description": "Missing field subscription",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (invalid access token)",
            "content": {}
          },
          "404": {
            "description": "Invalid user / Invalid session",
            "content": {}
          }
        }
      }
    },
    "/users/current": {
      "get": {
        "tags": ["Users"],
        "summary": "User data",
        "parameters": [],
        "security": [{ "Bearer": [] }],

        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserDataResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (invalid access token)",
            "content": {}
          },
          "404": {
            "description": "Invalid user / Invalid session",
            "content": {}
          }
        }
      }
    },

    "/users/avatars": {
      "patch": {
        "tags": ["Users"],
        "summary": "User avatar",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Change avatar",
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/AvatarRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AvatarResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (invalid access token)",
            "content": {}
          },
          "404": {
            "description": "Invalid user / Invalid session",
            "content": {}
          }
        }
      }
    },
    "/users/verify": {
      "post": {
        "tags": ["Users"],
        "summary": "User data",
        "parameters": [],
        "requestBody": {
          "description": "Repeated verify",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserVerifyRequest"
              }
            }
          }
        },

        "responses": {
          "200": {
            "description": "Verification email sent",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserVerifyResponse"
                }
              }
            }
          },
          "400": {
            "description": "missing required field email or verification has already been passed",
            "content": {}
          }
        }
      }
    },
    "/users/verify/{verificationToken}": {
      "get": {
        "tags": ["Users"],
        "summary": "User data",
        "parameters": [
          {
            "in": "path",
            "required": true,
            "type": "string",
            "description": "verificationToken",
            "name": "verificationToken"
          }
        ],

        "responses": {
          "200": {
            "description": "Verification successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserVerificationResponse"
                }
              }
            }
          },
          "404": {
            "description": "Invalid user / Invalid session",
            "content": {}
          }
        }
      }
    },

    "/api/contacts/?page&limit&favorite": {
      "get": {
        "tags": ["Contacts"],
        "summary": "User Contacts",
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "description": "Page from Total Contacts",
            "type": "string"
          },

          {
            "in": "query",
            "name": "limit",
            "description": "Limit Contacts on page",

            "type": "string"
          },

          {
            "in": "query",
            "name": "favorite",
            "description": "Favorite Contacts",
            "type": "string"
          }
        ],
        "security": [{ "Bearer": [] }],

        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContactsResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (invalid access token)",
            "content": {}
          },
          "404": {
            "description": "Invalid user / Invalid session",
            "content": {}
          }
        }
      }
    },

    "/api/contacts": {
      "post": {
        "tags": ["Contacts"],
        "summary": "Contacts add",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Contact add",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddContactRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddContactsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (missing required field)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (invalid access token)",
            "content": {}
          },
          "404": {
            "description": "Invalid user / Invalid session",
            "content": {}
          }
        }
      }
    },

    "/api/contacts/{contactId}": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Get contact by id",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "in": "path",
            "required": true,
            "type": "string",
            "description": "contact id",
            "name": "contactId"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContactByIdResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (no token provided)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (invalid access token)",
            "content": {}
          },
          "404": {
            "description": "Invalid user / Invalid session / Invalid id",
            "content": {}
          }
        }
      },
      "delete": {
        "tags": ["Contacts"],
        "summary": "Delete contact by id",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "in": "path",
            "required": true,
            "type": "string",
            "description": "contact id",
            "name": "contactId"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation, contact deleted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContactDeleteByIdResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (no token provided)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (invalid access token)",
            "content": {}
          },
          "404": {
            "description": "Invalid user / Invalid session / Invalid id",
            "content": {}
          }
        }
      },

      "patch": {
        "tags": ["Contacts"],
        "summary": "Update contact by id",
        "parameters": [
          {
            "in": "path",
            "required": true,
            "type": "string",
            "description": "contact id",
            "name": "contactId"
          }
        ],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Update contact by id",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateContactRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateContactResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (missing fields)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (invalid access token)",
            "content": {}
          },
          "404": {
            "description": "Invalid user / Invalid session / Invalid id",
            "content": {}
          }
        }
      }
    },

    "/api/contacts/{contactId}/favorite": {
      "patch": {
        "tags": ["Contacts"],
        "summary": "Update contact status",
        "parameters": [
          {
            "in": "path",
            "required": true,
            "type": "string",
            "description": "contact id",
            "name": "contactId"
          }
        ],
        "requestBody": {
          "description": "Update contact status by id",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateContactStatusRequest"
              }
            }
          }
        },
        "security": [{ "Bearer": [] }],

        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateContactStatusResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (missing field favorite)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (invalid access token)",
            "content": {}
          },
          "404": {
            "description": "Invalid user / Invalid session / Invalid id",
            "content": {}
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "Test"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          }
        }
      },

      "RegistrationResponse": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "Test"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "subscription": {
            "type": "string",
            "description": "User's subscription",
            "example": "starter/pro"
          }
        }
      },

      "LoginRequest": {
        "required": ["email", "password"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          }
        }
      },

      "LoginResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "Session's access token (needed for all requests)",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1aWQiOiI1ZmMyMDg1YmQwOTM2NTI4MTA3Y2UyNzQiLCJzaWQiOiI1ZmMyZDJmY2UxZDIwNTA2NzAyYmRkMjIiLCJpYXQiOjE2MDY2MDM1MTYsImV4cCI6MTYwNjYwNzExNn0.rJ_QjU4KvA76H96RHsvOBChK0Vjbd0NmqjMxdQVJIXA"
          },
          "user": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "User's name",
                "example": "Test"
              },
              "email": {
                "type": "string",
                "description": "User's email",
                "format": "email"
              },
              "subscription": {
                "type": "string",
                "description": "User's subscription",
                "example": "starter/pro"
              },
              "avatar": {
                "type": "string",
                "description": "User's avatar",
                "example": "http://host/avatars/6184355500127cfe738b8b4d/6184355500127cfe738b8b4d-f1539c1d698e1334f3c053fd8699f31e.jpg"
              }
            }
          }
        }
      },

      "UserVerifyRequest": {
        "required": ["email"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          }
        }
      },
      "UserVerifyResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Verification email sent"
          }
        }
      },
      "UserVerificationResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Verification successful"
          }
        }
      },

      "SubscriptionRequest": {
        "type": "object",
        "properties": {
          "subscription": {
            "type": "string",
            "description": "User's subscription",
            "example": "starter/pro"
          }
        }
      },
      "AvatarRequest": {
        "type": "object",
        "properties": {
          "avatar": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "binary"
            }
          }
        }
      },

      "AvatarResponse": {
        "type": "object",
        "properties": {
          "avatarURL": {
            "type": "string",
            "description": "User's avatar",
            "example": "http://host/avatars/6184355500127cfe738b8b4d/6184355500127cfe738b8b4d-f1539c1d698e1334f3c053fd8699f31e.jpg"
          }
        }
      },

      "UserDataResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "User's name",
                "example": "Test"
              },
              "email": {
                "type": "string",
                "description": "User's email",
                "format": "email"
              },
              "subscription": {
                "type": "string",
                "description": "User's subscription",
                "example": "starter/pro"

              },
              "avatar": {
                "type": "string",
                "description": "User's avatar",
                "example": "http://host/avatars/6184355500127cfe738b8b4d/6184355500127cfe738b8b4d-f1539c1d698e1334f3c053fd8699f31e.jpg"
              }
            }
          }
        }
      },

      "ContactsResponse": {
        "type": "object",
        "properties": {
          "contacts": {
            "type": "object",
            "properties": {
              "totalDocs": {
                "type": "integer",
                "description": "Contacts total",
                "example": "123"
              },
              "totalPages": {
                "type": "integer",
                "description": "Pages total",
                "example": "123"
              },
              "docs": {
                "type": "array",
                "description": "User's contacts list",
                "items": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string",
                      "description": "Contact id",
                      "example": "6179a6a51d70c09105c7fbdb"
                    },
                    "name": {
                      "type": "string",
                      "description": "Contact name",
                      "example": "Test Test"
                    },
                    "email": {
                      "type": "string",
                      "description": "Contact email",
                      "format": "email"
                    },
                    "phone": {
                      "type": "string",
                      "description": "Contact phone",
                      "example": "+7773555-0000"
                    },
                    "favorite": {
                      "type": "boolean",
                      "description": "Favorite Contact",
                      "format": "boolean"
                    },
                    "owner": {
                      "type": "string",
                      "description": "Contact owner",
                      "example": "6179a6a51d70c09105c7fbdb"
                    }
                  }
                }
              }
            }
          }
        }
      },

      "AddContactRequest": {
        "required": ["name", "email", "phone"],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Contact name",
            "example": "Test Test"
          },
          "email": {
            "type": "string",
            "description": "Contact email",
            "format": "email"
          },
          "phone": {
            "type": "string",
            "description": "Contact phone",
            "example": "+7773555-0000"
          }
        }
      },

      "AddContactsResponse": {
        "type": "object",
        "properties": {
          "contacts": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string",
                "description": "Contact id",
                "example": "61c707a8c104e48b7bd50918"
              },
              "name": {
                "type": "string",
                "description": "Contact name",
                "example": "Test Test"
              },
              "email": {
                "type": "string",
                "description": "Contact email",
                "format": "email"
              },
              "phone": {
                "type": "string",
                "description": "Contact phone",
                "example": "+7773555-0000"
              },
              "favorite": {
                "type": "boolean",
                "description": "is Favorite Contact",
                "example": "true/false"
              },
              "owner": {
                "type": "string",
                "description": "Contact owner",
                "example": "61c707a8c104e48b7bd50918"
              }
            }
          }
        }
      },
      "UpdateContactResponse": {
        "type": "object",
        "properties": {
          "contacts": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string",
                "description": "Contact id",
                "example": "61c707a8c104e48b7bd50918"
              },
              "name": {
                "type": "string",
                "description": "Contact name",
                "example": "Test Test"
              },
              "email": {
                "type": "string",
                "description": "Contact email",
                "format": "email"
              },
              "phone": {
                "type": "string",
                "description": "Contact phone",
                "example": "+7773555-0000"
              },
              "favorite": {
                "type": "boolean",
                "description": "is Favorite Contact",
                "example": "true/false"
              },
              "owner": {
                "type": "string",
                "description": "Contact owner",
                "example": "61c707a8c104e48b7bd50918"
              }
            }
          }
        }
      },
      "UpdateContactStatusResponse": {
        "type": "object",
        "properties": {
          "contacts": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string",
                "description": "Contact id",
                "example": "61c707a8c104e48b7bd50918"
              },
              "name": {
                "type": "string",
                "description": "Contact name",
                "example": "Test Test"
              },
              "email": {
                "type": "string",
                "description": "Contact email",
                "format": "email"
              },
              "phone": {
                "type": "string",
                "description": "Contact phone",
                "example": "+7773555-0000"
              },
              "favorite": {
                "type": "boolean",
                "description": "is Favorite Contact",
                "example": "true/false"
              },
              "owner": {
                "type": "string",
                "description": "Contact owner",
                "example": "61c707a8c104e48b7bd50918"
              }
            }
          }
        }
      },

      "UpdateContactRequest": {
        "required": ["name", "email", "phone"],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Contact name",
            "example": "Test Test"
          },
          "email": {
            "type": "string",
            "description": "Contact email",
            "format": "email"
          },
          "phone": {
            "type": "string",
            "description": "Contact phone",
            "example": "+7773555-0000"
          }
        }
      },
      "UpdateContactStatusRequest": {
        "required": ["favorite"],
        "type": "object",
        "properties": {
          "favorite": {
            "type": "boolean",
            "description": "Contact status",
            "example": "true/false"
          }
        }
      },
      "ContactByIdResponse": {
        "type": "object",
        "properties": {
          "contact": {
            "type": "object",
            "properties": {
              "_id": {
